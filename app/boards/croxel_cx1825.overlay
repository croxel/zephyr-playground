/ {
	aliases {
		buzzer-pwm = &buzzer;
	};

	buzzer: buzzer {
		compatible = "pwm-buzzer";
		pwms = <&pwm0 0 PWM_HZ(4000) PWM_POLARITY_NORMAL>;
	};
};

&i2c0 {
	status = "okay";
	clock-frequency = <I2C_BITRATE_STANDARD>;

	lp5521: lp5521@32 {
		status = "okay";
		compatible = "ti,lp5521";
		reg = <0x32>;
		en-gpios = <&gpio1 13 GPIO_ACTIVE_HIGH>;
	};
};
